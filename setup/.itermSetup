#!/usr/bin/env zsh

## install iterm
brew install --cask iterm2

## import plist
symlink /Users/nickesc/Workspace/__space__/.dotfiles/config/iterm2/com.googlecode.iterm2.plist ~/Library/Preferences/ -r
defaults read com.googlecode.iterm2

## Import profile jsons (exported from profile section of iTerm)
mkdir -p ~/Library/Application Support/iTerm2/DynamicProfiles
symlink /Users/nickesc/Workspace/__space__/.dotfiles/config/iterm2/Profiles.json ~/Library/Application Support/iTerm2/DynamicProfiles -r
